<h1><%= t "all_books" %></h1>

<table class="table">
  <thead>
    <th></th>
    <th><%= t "title" %></th>
    <th><%= t "author" %></th>
    <th><%= t "rating" %></th>
    <th><%= t "publish_date" %></th>
    <th><%= t "page" %></th>
    <th></th>
  </thead>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= image_tag book.book_photos.first.image_url(:thumb) if book.book_photos.exists? %></td>
        <td><%= link_to book.title, [:admin, book] %></td>
        <td><%= book.author %></td>
        <td><%= book.rating %></td>
        <td><%= l book.publish_date, format: :short %></td>
        <td><%= book.page %></td>
        <td align="right">
          <%= link_to t(:edit), edit_admin_book_path(book),
            class: "btn btn-primary" %>
          <%= link_to t(:delete), [:admin, book], method: :delete,
            class: "btn btn-danger", data: {confirm: t(:confirm_message)} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
<%= page_entries_info @books %>